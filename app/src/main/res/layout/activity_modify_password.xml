<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView_PrevPasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:padding="5dp"
                android:text="Previous Password"
                android:textColor="@color/gray4A"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_PrevPasswordContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView_Blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView_PasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:padding="5dp"
                android:text="New Password"
                android:textColor="@color/gray4A"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_PasswordContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView_Blank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView_ConfirmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:padding="5dp"
                android:text="Confirm"
                android:textColor="@color/gray4A"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_ConfirmContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView_Blank2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <Button
                android:id="@+id/button_Accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accepted" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>