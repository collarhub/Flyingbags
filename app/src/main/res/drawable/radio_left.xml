<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp" />
                    <solid android:color="@android:color/white" />
                    <stroke android:width="2dp"
                        android:color="#979797" />
                </shape>
            </item>
            <item android:drawable="@drawable/plane_gray"
                android:left="47dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="90dp" />
            <item android:drawable="@drawable/plane_text_gray"
                android:left="65dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="47dp" />
        </layer-list>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp" />
                    <solid android:color="@color/colorPrimaryDark" />
                    <stroke android:width="2dp"
                        android:color="#979797" />
                </shape>
            </item>
            <item android:drawable="@drawable/plane_white"
                android:left="47dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="90dp" />
            <item android:drawable="@drawable/plane_text_white"
                android:left="65dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="47dp" />
        </layer-list>
    </item>
</selector>